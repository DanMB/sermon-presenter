{
	"applicationId": "sermon.neutralino.app",
	"version": "0.0.1",
	"defaultMode": "window",
	"documentRoot": "/src/public/",
	"url": "/client.html",
	"enableServer": true,
	"enableNativeAPI": true,
	"tokenSecurity": "none",
	"logging": {
		"enabled": true,
		"writeToLogFile": true
	},
	"nativeAllowList": ["app.exit", "os.execCommand", "debug.log", "window.*", "events.*", "computer.*"],
	"modes": {
		"window": {
			"title": "Sermon Presenter",
			"width": 800,
			"height": 500,
			"minWidth": 400,
			"minHeight": 200,
			"fullScreen": false,
			"alwaysOnTop": false,
			"icon": "/src/public/icons/app.png",
			"enableInspector": true,
			"maximize": true,
			"hidden": false,
			"resizable": true,
			"exitProcessOnClose": true
		}
	},
	"cli": {
		"binaryName": "sermon-app",
		"resourcesPath": "/src/public/",
		"clientLibrary": "/src/public/neutralino.js",
		"binaryVersion": "4.7.0",
		"clientVersion": "3.6.0"
	}
}
