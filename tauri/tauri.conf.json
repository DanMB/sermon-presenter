{
	"$schema": "../node_modules/@tauri-apps/cli/schema.json",
	"build": {
		"withGlobalTauri": true,
		"beforeBuildCommand": "yarn build:github",
		"beforeDevCommand": "yarn start:src",
		"devPath": "http://localhost:3000/",
		"distDir": "https://danmb.github.io/sermon-presenter/"
	},
	"package": {
		"productName": "ourpresenter",
		"version": "0.3.2"
	},
	"tauri": {
		"allowlist": {
			"all": true,
			"window": {
				"all": true
			}
		},
		"bundle": {
			"active": true,
			"category": "Utility",
			"icon": ["../src/public/icons/app.png", "../src/public/favicon.ico"],
			"identifier": "ourpresenter.tauri",
			"resources": ["../src/public/splash.html"],
			"targets": "all",
			"windows": {
				"certificateThumbprint": null,
				"digestAlgorithm": "sha256",
				"timestampUrl": ""
			},
			"deb": {
				"depends": []
			},
			"macOS": {
				"entitlements": null,
				"exceptionDomain": "",
				"frameworks": [],
				"providerShortName": null,
				"signingIdentity": null
			}
		},
		"security": {
			"csp": null
		},
		"updater": {
			"active": false
		},
		"windows": [
			{
				"label": "control",
				"title": "OurPresenter",
				"minHeight": 300,
				"minWidth": 500,
				"resizable": true,
				"focus": true,
				"fullscreen": false,
				"maximized": true,
				"decorations": true,
				"visible": false
			},
			{
				"width": 300,
				"height": 400,
				"decorations": false,
				"url": "./splash.html",
				"label": "splash",
				"center": true
			}
		]
	}
}
